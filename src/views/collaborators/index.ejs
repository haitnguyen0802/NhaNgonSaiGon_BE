<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Nhà Ngon Sài Gòn</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <% if (typeof extraCSS !== 'undefined') { %>
        <%- extraCSS %>
    <% } %>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="bg-dark text-white">
            <div class="sidebar-header p-3">
                <h3>Nhà Ngon Sài Gòn</h3>
            </div>

            <ul class="list-unstyled components">
                <li class="<%= active === 'dashboard' ? 'active' : '' %>">
                    <a href="/dashboard" class="nav-link text-white">
                        <i class="fas fa-tachometer-alt me-2"></i> Tổng quan
                    </a>
                </li>
                <li class="<%= active === 'posts' ? 'active' : '' %>">
                    <a href="/posts" class="nav-link text-white">
                        <i class="fas fa-newspaper me-2"></i> Quản lý tin đăng
                    </a>
                </li>
                <li class="<%= active === 'products' ? 'active' : '' %>">
                    <a href="/products" class="nav-link text-white">
                        <i class="fas fa-box me-2"></i> Quản lý sản phẩm
                    </a>
                </li>
                <li class="<%= active === 'categories' ? 'active' : '' %>">
                    <a href="/categories" class="nav-link text-white">
                        <i class="fas fa-tags me-2"></i> Danh mục
                    </a>
                </li>
                <li class="<%= active === 'collaborators' ? 'active' : '' %>">
                    <a href="/collaborators" class="nav-link text-white">
                        <i class="fas fa-users me-2"></i> Cộng tác viên
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content" class="w-100">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="fas fa-bars"></i>
                    </button>
                    
                    <div class="d-flex ms-auto">
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <img src="<%= user.avatar || '/img/default-avatar.png' %>" class="avatar rounded-circle" width="32" height="32">
                                <span class="ms-2"><%= user.name %></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/profile">Hồ sơ</a></li>
                                <li><a class="dropdown-item" href="/settings">Cài đặt</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/logout">Đăng xuất</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid">
                <% if (typeof flashMessage !== 'undefined' && flashMessage.message) { %>
                    <div class="alert alert-<%= flashMessage.type %> alert-dismissible fade show" role="alert">
                        <%= flashMessage.message %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
                
                <!-- Collaborators Page -->
                <div class="container-fluid">
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Quản lý cộng tác viên</h1>
                        <a href="/collaborators/create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                            <i class="fas fa-plus fa-sm text-white-50"></i> Thêm cộng tác viên
                        </a>
                    </div>

                    <!-- Filters -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Lọc cộng tác viên</h6>
                        </div>
                        <div class="card-body">
                            <form method="GET" action="/collaborators" class="row">
                                <div class="col-md-3 mb-3">
                                    <label for="status">Trạng thái</label>
                                    <select class="form-select" id="status" name="status">
                                        <option value="">Tất cả trạng thái</option>
                                        <option value="active" <%= status === 'active' ? 'selected' : '' %>>Hoạt động</option>
                                        <option value="inactive" <%= status === 'inactive' ? 'selected' : '' %>>Không hoạt động</option>
                                    </select>
                                </div>
                                
                                <div class="col-md-3 mb-3">
                                    <label for="search">Tìm kiếm</label>
                                    <input type="text" class="form-control" id="search" name="search" placeholder="Tên hoặc email..." value="<%= search %>">
                                </div>
                                
                                <div class="col-md-3 mb-3 d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary">Lọc</button>
                                    <a href="/collaborators" class="btn btn-secondary ms-2">Đặt lại</a>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Collaborators Table -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 d-flex justify-content-between align-items-center">
                            <h6 class="m-0 font-weight-bold text-primary">Danh sách cộng tác viên</h6>
                            <div>
                                <span>Hiển thị <%= collaborators.length %> / <%= totalCollaborators %> cộng tác viên</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Ảnh đại diện</th>
                                            <th>Tên</th>
                                            <th>Email</th>
                                            <th>Số điện thoại</th>
                                            <th>Số sản phẩm</th>
                                            <th>Địa chỉ</th>
                                            <th>Trạng thái</th>
                                            <th>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% collaborators.forEach(collaborator => { %>
                                            <tr>
                                                <td class="text-center">
                                                    <img src="<%= collaborator.avatar || '/img/default-avatar.png' %>" alt="<%= collaborator.name %>" class="avatar rounded-circle" style="width: 50px; height: 50px;">
                                                </td>
                                                <td><%= collaborator.name %></td>
                                                <td><%= collaborator.email %></td>
                                                <td><%= collaborator.phone_number || 'N/A' %></td>
                                                <td><%= collaborator.productCount || 0 %></td>
                                                <td><%= collaborator.address || 'N/A' %></td>
                                                <td>
                                                    <span class="badge bg-<%= collaborator.is_active ? 'success' : 'secondary' %>">
                                                        <%= collaborator.is_active ? 'Hoạt động' : 'Không hoạt động' %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a href="/collaborators/<%= collaborator.id %>" class="btn btn-info btn-sm" data-bs-toggle="tooltip" title="Xem chi tiết">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a href="/collaborators/<%= collaborator.id %>/edit" class="btn btn-primary btn-sm" data-bs-toggle="tooltip" title="Sửa">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-<%= collaborator.is_active ? 'warning' : 'success' %> btn-sm" 
                                                                onclick="toggleCollaboratorStatus('<%= collaborator.id %>', '<%= !collaborator.is_active %>')" 
                                                                data-bs-toggle="tooltip" title="<%= collaborator.is_active ? 'Vô hiệu hóa' : 'Kích hoạt' %>">
                                                            <i class="fas <%= collaborator.is_active ? 'fa-ban' : 'fa-check' %>"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal<%= collaborator.id %>" title="Xóa">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </div>
                                                    
                                                    <!-- Delete Modal -->
                                                    <div class="modal fade" id="deleteModal<%= collaborator.id %>" tabindex="-1" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Xác nhận xóa</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p>Bạn có chắc chắn muốn xóa cộng tác viên "<%= collaborator.name %>"?</p>
                                                                    <% if (collaborator.productCount > 0) { %>
                                                                        <div class="alert alert-warning">
                                                                            <i class="fas fa-exclamation-triangle"></i> Cộng tác viên này đang có <%= collaborator.productCount %> sản phẩm. Nếu xóa, các sản phẩm sẽ không có cộng tác viên.
                                                                        </div>
                                                                    <% } %>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                                    <form action="/collaborators/<%= collaborator.id %>?_method=DELETE" method="POST" style="display: inline;">
                                                                        <button type="submit" class="btn btn-danger">Xóa</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                        
                                        <% if (collaborators.length === 0) { %>
                                            <tr>
                                                <td colspan="8" class="text-center">Không có cộng tác viên nào.</td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                            
                            <!-- Pagination -->
                            <% if (totalPages > 1) { %>
                                <nav aria-label="Page navigation">
                                    <ul class="pagination justify-content-center">
                                        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                            <a class="page-link" href="/collaborators?page=<%= currentPage - 1 %><%= queryString %>" aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>
                                        
                                        <% for (let i = 1; i <= totalPages; i++) { %>
                                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                <a class="page-link" href="/collaborators?page=<%= i %><%= queryString %>"><%= i %></a>
                                            </li>
                                        <% } %>
                                        
                                        <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                            <a class="page-link" href="/collaborators?page=<%= currentPage + 1 %><%= queryString %>" aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/main.js"></script>
    <% if (typeof extraJS !== 'undefined') { %>
        <%- extraJS %>
    <% } %>

    <!-- JavaScript for Collaborator Status Toggle -->
    <script>
        function toggleCollaboratorStatus(id, isActiveStr) {
            const isActive = isActiveStr === 'true';
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = `/collaborators/${id}/toggle-status`;
            
            const methodInput = document.createElement('input');
            methodInput.type = 'hidden';
            methodInput.name = '_method';
            methodInput.value = 'PATCH';
            
            const statusInput = document.createElement('input');
            statusInput.type = 'hidden';
            statusInput.name = 'is_active';
            statusInput.value = isActive;
            
            form.appendChild(methodInput);
            form.appendChild(statusInput);
            document.body.appendChild(form);
            form.submit();
        }
    </script>
</body>
</html> 