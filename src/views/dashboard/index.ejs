<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Nhà Ngon Sài Gòn</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <% if (typeof extraCSS !== 'undefined') { %>
        <%- extraCSS %>
    <% } %>
</head>
<body>
    <div class="wrapper">
        <!-- Page Content -->
        <div id="content" class="w-100">

            <!-- Main Content -->
            <div class="container-fluid">
                <% if (typeof flashMessage !== 'undefined' && flashMessage.message) { %>
                    <div class="alert alert-<%= flashMessage.type %> alert-dismissible fade show" role="alert">
                        <%= flashMessage.message %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
                
                <!-- Dashboard -->
                <div class="container-fluid">
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Tổng quan</h1>
                        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                            <i class="fas fa-download fa-sm text-white-50"></i> Tạo báo cáo
                        </a>
                    </div>

                    <!-- Content Row -->
                    <div class="row">
                        <!-- Tổng số sản phẩm -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Tổng số sản phẩm</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= stats.totalProducts %></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-box fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Sản phẩm đang giảm giá -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                Sản phẩm giảm giá</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= stats.discountedProducts %></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-percent fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Sản phẩm giảm giá sốc -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                                Giảm giá sốc
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= stats.flashSaleProducts %></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-bolt fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Sản phẩm yêu thích -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-warning shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                                Sản phẩm yêu thích</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= stats.favoriteProducts %></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-heart fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Content Row -->
                    <div class="row">
                        <!-- Sản phẩm giảm giá -->
                        <div class="col-lg-6 mb-4">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Sản phẩm giảm giá</h6>
                                    <a href="/products?isDiscounted=true" class="btn btn-sm btn-primary">Xem tất cả</a>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Hình ảnh</th>
                                                    <th>Tên sản phẩm</th>
                                                    <th>Giá gốc</th>
                                                    <th>Giá khuyến mãi</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% discountProducts.forEach(product => { %>
                                                <tr>
                                                    <td>
                                                        <img src="<%= product.main_image || '/img/no-image.jpg' %>" alt="<%= product.name %>" class="product-image" width="50" height="50">
                                                    </td>
                                                    <td><%= product.name %></td>
                                                    <td><%= product.price.toLocaleString('vi-VN') %> ₫</td>
                                                    <td><%= product.discount_price.toLocaleString('vi-VN') %> ₫</td>
                                                </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Sản phẩm giảm giá sốc -->
                        <div class="col-lg-6 mb-4">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Sản phẩm giảm giá sốc</h6>
                                    <a href="/products?isFlashSale=true" class="btn btn-sm btn-primary">Xem tất cả</a>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Hình ảnh</th>
                                                    <th>Tên sản phẩm</th>
                                                    <th>Giá gốc</th>
                                                    <th>Giá sốc</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% flashSaleProducts.forEach(product => { %>
                                                <tr>
                                                    <td>
                                                        <img src="<%= product.main_image || '/img/no-image.jpg' %>" alt="<%= product.name %>" class="product-image" width="50" height="50">
                                                    </td>
                                                    <td><%= product.name %></td>
                                                    <td><%= product.price.toLocaleString('vi-VN') %> ₫</td>
                                                    <td><%= product.discount_price.toLocaleString('vi-VN') %> ₫</td>
                                                </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/main.js"></script>
    <% if (typeof extraJS !== 'undefined') { %>
        <%- extraJS %>
    <% } %>
</body>
</html> 